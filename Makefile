CC = gcc
CFLAGS = -Wall -Wextra -Werror -D BUFFER_SIZE=42
NAME = .o
RM = rm -rf
################################################################################
##								MANDATORY									  ##
################################################################################
CFILES = \
		get_next_line.c \
		get_next_line_utils.c

#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - #

################################################################################
##									BONUS									  ##
################################################################################
#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - #
OBJS = $(CFILES:.c=.o)
################################################################################

################################################################################
.PHONY: all re fclean clean
################################################################################
all:        $(NAME)

$(NAME): $(OBJS)

%.o:%.c
			$(CC) $(CFLAGS) -c $^ -o $@

re:     	fclean all

fclean: clean
			@$(RM) $(NAME)

clean:	bclean
			@$(RM) $(OBJS)

# $<: rule target file (input)
# $@: rule source file (output)
